<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:orientation="vertical"
              android:background="@drawable/selector_pearl_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_done_white_24dp"
            android:tint="@color/blockchain_green"
            android:layout_marginRight="16dp"
            />

        <!-- currency sign, amount column -->
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/transaction_amount_size"
            />

        <!-- date, amount column -->
        <TextView
            android:id="@+id/tv_date"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/transaction_date_size"
            />

        <!--&lt;!&ndash; description column &ndash;&gt;-->
        <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="@dimen/transaction_height"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_weight="1"-->
        <!--android:orientation="horizontal"-->
        <!-->-->

        <!--<TextView-->
        <!--android:id="@+id/tv_note"-->
        <!--android:layout_width="@dimen/transaction_column_width"-->
        <!--android:layout_height="@dimen/transaction_height"-->
        <!--android:gravity="center_vertical"-->
        <!--android:textSize="@dimen/transaction_date_size"-->
        <!--/>-->

        <!--</LinearLayout>-->

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dropshadow_grey"/>

</LinearLayout>
